<Window x:Class="TrainzInfo_client.WIndows.OblastAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainzInfo_client.WIndows"
        mc:Ignorable="d"
        Title="OblastAddWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="OblastName" HorizontalAlignment="Left" Height="30" Margin="107,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239"/>
        <Button Name="OblastSave" Content="Сохранить" HorizontalAlignment="Left" Margin="75,38,0,0" Grid.Row="1" VerticalAlignment="Top" Width="207" Height="31" Click="OblastSave_Click" />
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="10,72,0,0" TextWrapping="Wrap" Text="Область" VerticalAlignment="Top" Width="75"/>
        <ComboBox Name="OblCenterName" HorizontalAlignment="Left" Margin="107,35,0,0" VerticalAlignment="Top" Width="239" Height="25"/>
        <Button Name="AddCity" Content="+" HorizontalAlignment="Left" Margin="351,35,0,0" VerticalAlignment="Top" Width="31" Height="25" Click="AddCity_Click"/>
    </Grid>
</Window>
